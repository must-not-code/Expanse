          a data-fancybox='gallery' href='portfolio/10.jpg'
            img src='portfolio/10.png'

    .container-fluid.px-0
      #embed.youtube.mb-5
        iframe#youtube allowfullscreen='' frameborder='0' src='//www.youtube.com/embed/iegTolZbWrg?rel=0'
      #film.film.mb-5.d-flex.justify-content-center.align-items-center
        .text-center
          i.fa.fa-play-circle-o.fa-5x.mb-5
          h2 Посмотреть видео-тур

    #contacts
    .container.contacts.py-5.mb-5
      .text-center
        h2 Контактная информация
        p Можете связаться с нами по телефону в указанное время, либо воспользоваться формой обратной связи и мы Вам перезвоним
        img src='arrow.png'
      .container
        .row
          .col
            .row
              .col-1
                p
                  i.fa.fa-phone.mt-1
              .col
                p
                  a.text-dark href='tel:+7 (977) 538-61-48' +7 (977) 538-61-48
            .row
              .col-1
                p
                  i.fa.fa-map-o.mt-1
              .col
                p г. Москва, ул. Смольная, д. 12
            .row
              .col-1
                p
                  i.fa.fa-calendar.mt-1
              .col
                p Eжедневно с 10:00 до 22:00
          .col.text-center
            p Форма обратной связи
            .form#form
              .error#error
              form#contact action='/' method='post'
                .field
                  input#name name='name' required='' type='text' placeholder='Имя'
                .field
                  input#phone name='phone' type='tel' placeholder='Телефон'
                .field.hp
                  input#email name='email' type='email' placeholder='Почта'
                .field
                  input#email name='real_email' type='email' placeholder='Почта'
                .field
                  button.btn.text-white.text-uppercase type='submit' Свяжитесь со мной

    .footer.d-flex.justify-content-center.align-items-center
      = "Copyright © #{Time.now.year} E Terra Studio. Все права защищены."

    #modal-form.modal.fade aria-hidden='true' role='dialog' tabindex='-1'
      .modal-dialog.modal-dialog-centered role='document'
        .modal-content
          .modal-header
            button.close aria-label='Close' data-dismiss='modal' type='button'
              span aria-hidden='true' &times;
          .modal-body.text-center#modal-body
            p.text-dark Просто оставьте контакт и мы Вам перезвоним
            .form#modal-form
              .error#modal-error
              form#modal-contact action='/' method='post'
                .field
                  input#name name='name' required='' type='text' placeholder='Имя'
                .field
                  input#phone name='phone' type='tel' placeholder='Телефон'
                .field.hp
                  input#email name='email' type='email' placeholder='Почта'
                .field
                  input#email name='real_email' type='email' placeholder='Почта'
                .field
                  button.btn.text-white.text-uppercase type='submit' Свяжитесь со мной

